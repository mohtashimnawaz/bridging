{
  "name": "layerzero-oft-adapter",
  "version": "1.0.0",
  "description": "LayerZero OFT Adapter for bridging custom SPL token to ERC-20",
  "scripts": {
    "build": "pnpm build:evm && pnpm build:solana",
    "build:solana": "cd programs/oft-adapter && anchor build",
    "build:evm": "hardhat compile",
    "deploy:solana": "bash scripts/deploy-solana.sh",
    "deploy:ethereum": "hardhat run scripts/deploy-ethereum.ts --network ethereum",
    "deploy:ethereum:sepolia": "hardhat run scripts/deploy-ethereum.ts --network sepolia",
    "set-peer:solana": "ts-node scripts/set-peer-solana.ts",
    "set-peer:evm": "hardhat run scripts/set-peer-evm.ts --network ethereum",
    "test": "pnpm test:evm && pnpm test:solana",
    "test:solana": "anchor test",
    "test:evm": "hardhat test",
    "verify:ethereum": "hardhat verify --network ethereum"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@layerzerolabs/lz-evm-messagelib-v2": "^3.0.147",
    "@layerzerolabs/lz-evm-oapp-v2": "^2.0.0",
    "@layerzerolabs/lz-evm-protocol-v2": "^3.0.147",
    "@layerzerolabs/lz-solana-sdk-v2": "^2.0.0",
    "@layerzerolabs/oapp-evm": "^0.4.0",
    "@layerzerolabs/oft-evm": "^2.0.0",
    
    "@openzeppelin/contracts": "^4.9.3",
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.87.0",
    "dotenv": "^16.3.0",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
